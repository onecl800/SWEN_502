<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colourBtnBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redPicker"
        android:layout_alignStart="@+id/colourBtnBack"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/guessColor" />

    <TextView
        android:text="Guess a colour by entering RBG values"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/guessColor"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluePicker"
        android:layout_alignBaseline="@+id/greenPicker"
        android:layout_alignBottom="@+id/greenPicker"
        android:layout_alignEnd="@+id/guessColor" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greenPicker"
        android:layout_alignBaseline="@+id/redPicker"
        android:layout_alignBottom="@+id/redPicker"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colourGo"
        android:layout_above="@+id/colourBtnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp" />
</RelativeLayout>