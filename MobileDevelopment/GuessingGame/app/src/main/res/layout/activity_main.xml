<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.claire.guessinggame.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Guessing Game. Click below to guess a number or guess a colour."
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:text=" Guess a Colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colourBtn"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/numBtn"
        android:layout_alignEnd="@+id/numBtn" />

    <Button
        android:text="Guess a Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
